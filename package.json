{
  "name": "projectnamewithnospacesorcaps",
  "version": "1.0.0",
  "description": "A Client Name",
  "main": "webpack.mix.js",
  "scripts": {
    "all": "mix watch & npm-watch prod",
    "watch-all": "mix watch & npm-watch prod",
    "watch-prod": "npm-watch prod",
    "watch": "mix watch",
    "prod": "mix --production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "browserslist": [
    "> 1%"
  ],
  "watch": {
    "prod": {
      "patterns": [
        "public_html/_assets/js",
        "public_html/_assets/css"
      ],
      "ignore": "mix-manifest.json",
      "extensions": "js,css,scss",
      "runOnChangeOnly": true,
      "inherit": true,
      "quiet": true,
      "silent": true
    }
  },
  "devDependencies": {
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "laravel-mix": "^6.0.25",
    "postcss": "^8.2.9",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "tailwindcss": "^2.2.4"
  },
  "dependencies": {
    "body-scroll-lock": "^3.1.5",
    "npm-watch": "^0.9.0"
  }
}
